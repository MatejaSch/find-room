{% extends 'base.html.twig' %}

{% block title %}Hello Admin!{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
{% block body %}
    {% include 'includes/navbar.html.twig' %}

    <div class="content">
        {% include 'admin/includes/admin_menu.html.twig' %}

        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.pricePerNight) }}
            {{ form_label(form.rooms )}}
            <div class="p-1 mb-2" style="overflow: auto; max-height: 200px;">
                {{ form_widget(form.rooms )}}
            </div>
            <div class="offer-images">
                <div class="offer-image">
                    <img src="" alt="offer image">
                    <input type="checkbox" name="offer-image">
                </div>
            </div>
            <input class="btn btn-primary" type="submit" value="Add new offer">
        {{ form_end(form) }}


    </div>

{% endblock %}
