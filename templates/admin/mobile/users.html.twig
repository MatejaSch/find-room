{% extends 'base.html.twig' %}

{% block title %}Hello Admin!{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
    {{ encore_entry_script_tags('admin_mobile_users') }}
{% endblock %}
{% block body %}
    {% include 'includes/navbar.html.twig' %}
    <div class="content">
        {% include 'admin/includes/admin_menu_mobile.html.twig' %}
